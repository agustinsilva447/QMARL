#include <stdio.h>
#include "comblock.h"
#include "platform.h"
#include "xil_printf.h"
#include "sleep.h"
#include "xparameters.h"

int main()
{
    init_platform();
    float a_re, a_im, b_re, b_im, c_re, c_im;

    a_re = 1111100110011010; // -0.2;
    a_im = 0000100111101100; // 0.31;
    b_re = 0000100000000000; // 0.25;
    b_im = 1110100110011010; // -0.7;


    cbWrite(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_OREG0, (a_re));
    cbWrite(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_OREG1, (a_im));
    cbWrite(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_OREG2, (b_re));
    cbWrite(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_OREG3, (b_im));

    sleep(1);

    c_re = u32_to_float(cbRead(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_IREG0));
    c_im = u32_to_float(cbRead(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_IREG1));

    sleep(1);

    printf("(%f + i* %f) * (%f + i* %f) = (%f + i* %f)", a_re, a_im, b_re, b_im, c_re, c_im);
    cleanup_platform();
    return 0;
}
